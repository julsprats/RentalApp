<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688">

        <!-- Custom layout for the Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ourlogo"
                android:contentDescription="Our Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Details"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvPropertyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvPropertyAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Address"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/ivRental"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="Rental Image Goes Here"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvBedBath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedrooms and Bathrooms"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvKitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitchen?"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is it available?"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landlord"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvContactDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Email and Phone"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/emailbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send email"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:backgroundTint="#009688"/>

        <Button
            android:id="@+id/callbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:backgroundTint="#009688"/>

    </LinearLayout>

</LinearLayout>